@page
@model Rosheta.Pages_Medications.IndexModel

@{
    ViewData["Title"] = "Medications";
    ViewData["PageDescription"] = "Manage medication inventory and information";
    ViewData["BreadcrumbItems"] = new List<(string Text, string? Url)>
    {
        ("Medications", null)
    };
}

<!-- Page Header -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h2 mb-1">
                    <i class="bi bi-capsule me-2 text-success"></i>Medications
                </h1>
                <p class="text-muted mb-0">Manage medication inventory and information</p>
            </div>
            <div>
                <a asp-page="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle-fill me-1"></i>
                    <span class="d-none d-sm-inline">Create New Medication</span>
                    <span class="d-sm-none">New</span>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Search Section -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get">
            <div class="row g-3 align-items-end">
                <div class="col-md-8">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-search me-1"></i>Search Medications
                    </label>
                    <div class="input-group">
                        <div class="live-search-container">
                            <input type="text"
                                   class="form-control live-search-input"
                                   placeholder="Search by Name or Dosage..."
                                   name="SearchString"
                                   value="@Model.SearchString"
                                   data-live-search="/Medications?handler=Search"
                                   data-live-search-dropdown="medications-search-dropdown"
                                   data-live-search-display="name"
                                   data-live-search-secondary="dosage"
                                   autocomplete="off">
                            <div id="medications-search-dropdown" class="live-search-dropdown" aria-label="Search suggestions"></div>
                        </div>
                        <button class="btn btn-outline-success" type="submit">
                            <i class="bi bi-search"></i>
                            <span class="d-none d-sm-inline ms-1">Search</span>
                        </button>
                    </div>
                </div>
                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(Model.SearchString))
                    {
                        <div class="d-grid">
                            <a asp-page="./Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i>Clear Search
                            </a>
                        </div>
                        <small class="text-muted mt-1 d-block">
                            Searching for: "<strong>@Model.SearchString</strong>"
                        </small>
                    }
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Results Section -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-transparent border-bottom">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
                <i class="bi bi-list-ul me-2"></i>Medication Inventory
            </h5>
            @if (Model.Count > 0)
            {
                <span class="badge bg-success rounded-pill">@Model.Count total</span>
            }
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model.Medication != null && Model.Medication.Any())
        {
            <!-- Desktop Table -->
            <div class="table-responsive d-none d-lg-block">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="border-0">
                                <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort"
                                   asp-route-CurrentPage="@Model.CurrentPage"
                                   asp-route-SearchString="@Model.SearchString"
                                   class="text-decoration-none">
                                    @Html.DisplayNameFor(model => model.Medication[0].Name)
                                    <i class="bi bi-arrow-down-up ms-1 text-muted"></i>
                                </a>
                            </th>
                            <th class="border-0">@Html.DisplayNameFor(model => model.Medication[0].Dosage)</th>
                            <th class="border-0">@Html.DisplayNameFor(model => model.Medication[0].Form)</th>
                            <th class="border-0">@Html.DisplayNameFor(model => model.Medication[0].Manufacturer)</th>
                            <th class="border-0 text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Medication)
                        {
                            <tr>
                                <td class="fw-semibold">
                                    <i class="bi bi-capsule me-2 text-muted"></i>@Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Dosage)</td>
                                <td>@Html.DisplayFor(modelItem => item.Form)</td>
                                <td class="text-muted">@Html.DisplayFor(modelItem => item.Manufacturer)</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-page="./Details" asp-route-id="@item.Id" 
                                           class="btn btn-sm btn-outline-info" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-page="./Edit" asp-route-id="@item.Id" 
                                           class="btn btn-sm btn-outline-primary" title="Edit">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-page="./Delete" asp-route-id="@item.Id" 
                                           class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Mobile Cards -->
            <div class="d-lg-none">
                @foreach (var item in Model.Medication)
                {
                    <div class="border-bottom p-3">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h6 class="mb-1 fw-semibold">
                                <i class="bi bi-capsule me-2 text-success"></i>@Html.DisplayFor(modelItem => item.Name)
                            </h6>
                        </div>
                        <div class="row g-2 text-sm">
                            <div class="col-6">
                                <small class="text-muted d-block">Dosage</small>
                                <span>@Html.DisplayFor(modelItem => item.Dosage)</span>
                            </div>
                            <div class="col-6">
                                <small class="text-muted d-block">Form</small>
                                <span>@Html.DisplayFor(modelItem => item.Form)</span>
                            </div>
                            <div class="col-12">
                                <small class="text-muted d-block">Manufacturer</small>
                                <span>@Html.DisplayFor(modelItem => item.Manufacturer)</span>
                            </div>
                        </div>
                        <div class="d-flex gap-2 mt-3">
                            <a asp-page="./Details" asp-route-id="@item.Id" 
                               class="btn btn-sm btn-outline-info flex-fill">
                                <i class="bi bi-eye me-1"></i>Details
                            </a>
                            <a asp-page="./Edit" asp-route-id="@item.Id" 
                               class="btn btn-sm btn-outline-primary flex-fill">
                                <i class="bi bi-pencil-square me-1"></i>Edit
                            </a>
                            <a asp-page="./Delete" asp-route-id="@item.Id" 
                               class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-capsule text-muted mb-3" style="font-size: 3rem;"></i>
                <h5 class="text-muted mb-3">No Medications Found</h5>
                @if (!string.IsNullOrEmpty(Model.SearchString))
                {
                    <p class="text-muted mb-4">No medications match your search criteria. Try a different search term.</p>
                    <a asp-page="./Index" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-x-circle me-1"></i>Clear Search
                    </a>
                }
                else
                {
                    <p class="text-muted mb-4">Start by adding your first medication to begin managing inventory.</p>
                }
                <a asp-page="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle-fill me-1"></i>Create New Medication
                </a>
            </div>
        }
    </div>
</div>

<!-- Pagination -->
@{
    var prevDisabled = Model.CurrentPage <= 1 ? "disabled" : "";
    var nextDisabled = Model.CurrentPage >= Model.TotalPages ? "disabled" : "";
}

@if (Model.TotalPages > 1)
{
    <div class="d-flex justify-content-between align-items-center mt-4">
        <div class="text-muted small">
            Showing page @Model.CurrentPage of @Model.TotalPages (@Model.Count total medications)
        </div>
        <nav aria-label="Page navigation">
            <ul class="pagination pagination-sm mb-0">
                <li class="page-item @prevDisabled">
                    <a asp-page="./Index"
                       asp-route-SearchString="@Model.SearchString"
                       asp-route-CurrentPage="@(Model.CurrentPage - 1)"
                       asp-route-sortOrder="@Model.CurrentSort"
                       class="page-link" aria-label="Previous">
                        <i class="bi bi-chevron-left"></i>
                        <span class="d-none d-sm-inline ms-1">Previous</span>
                    </a>
                </li>
                <li class="page-item active" aria-current="page">
                     <span class="page-link">@Model.CurrentPage</span>
                </li>
                <li class="page-item @nextDisabled">
                    <a asp-page="./Index"
                       asp-route-SearchString="@Model.SearchString"
                       asp-route-CurrentPage="@(Model.CurrentPage + 1)"
                       asp-route-sortOrder="@Model.CurrentSort"
                       class="page-link" aria-label="Next">
                        <span class="d-none d-sm-inline me-1">Next</span>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
}
else if (Model.Count > 0)
{
    <div class="text-center text-muted small mt-3">
        Total Medications: @Model.Count
    </div>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Check for TempData messages and display toasts
            const successMessage = '@Html.Raw(TempData["SuccessMessage"])'; 
            const errorMessage = '@Html.Raw(TempData["ErrorMessage"])';

            if (successMessage) {
                showToast(successMessage, 'success');
            }
            if (errorMessage) {
                showToast(errorMessage, 'danger');
            }
        });
    </script>
}
