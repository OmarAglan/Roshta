@page
@model Rosheta.Pages_Medications.DetailsModel

@{
    ViewData["Title"] = "Medication Details";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h1 class="h3 mb-1">@Model.Medication.Name</h1>
                    <p class="text-muted mb-0">Medication ID: #@Model.Medication.Id</p>
                </div>
                <div class="btn-toolbar" role="toolbar" aria-label="Medication actions">
                    <div class="btn-group me-2" role="group">
                        <a asp-page="./Edit" asp-route-id="@Model.Medication.Id" class="btn btn-primary">
                            <i class="fas fa-edit me-1" aria-hidden="true"></i>Edit Medication
                        </a>
                        <button type="button" class="btn btn-outline-primary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#" onclick="printMedicationDetails()">
                                <i class="fas fa-print me-2"></i>Print Details
                            </a></li>
                            <li><a class="dropdown-item" href="#" onclick="exportMedicationData()">
                                <i class="fas fa-download me-2"></i>Export Data
                            </a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#" onclick="viewPrescriptionHistory()">
                                <i class="fas fa-history me-2"></i>Prescription History
                            </a></li>
                            <li><a class="dropdown-item" href="#" onclick="checkInteractions()">
                                <i class="fas fa-exclamation-triangle me-2"></i>Check Interactions
                            </a></li>
                        </ul>
                    </div>
                    <a asp-page="./Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1" aria-hidden="true"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Main Information Panel -->
        <div class="col-lg-8">
            <!-- Drug Information Card -->
            <div class="card mb-4 card-fade-in">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-pills me-2 text-primary"></i>Drug Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">Generic Name</label>
                            <p class="fs-5 fw-semibold mb-0">@Model.Medication.Name</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">Manufacturer</label>
                            <p class="mb-0">
                                <i class="fas fa-industry me-2 text-muted"></i>@Model.Medication.Manufacturer
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">Dosage Strength</label>
                            <p class="mb-0">
                                <span class="badge bg-info fs-6">@Model.Medication.Dosage</span>
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">Dosage Form</label>
                            <p class="mb-0">
                                <span class="badge bg-secondary fs-6">@Model.Medication.Form</span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Clinical Information Card -->
            <div class="card mb-4 card-fade-in">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-stethoscope me-2 text-success"></i>Clinical Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label class="form-label text-muted">Therapeutic Class</label>
                            <p class="mb-0">
                                <span class="badge bg-primary">Classification pending</span>
                                <small class="text-muted ms-2">Based on drug properties</small>
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">Route of Administration</label>
                            <p class="mb-0">
                                @{
                                    var route = Model.Medication.Form.ToLower() switch
                                    {
                                        var f when f.Contains("tablet") || f.Contains("capsule") => "Oral",
                                        var f when f.Contains("injection") => "Injection",
                                        var f when f.Contains("cream") || f.Contains("ointment") => "Topical",
                                        var f when f.Contains("drops") => "Topical/Ophthalmic",
                                        _ => "As prescribed"
                                    };
                                }
                                <i class="fas fa-route me-2 text-muted"></i>@route
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">Storage Conditions</label>
                            <p class="mb-0">
                                <i class="fas fa-thermometer-half me-2 text-muted"></i>Store at room temperature
                            </p>
                        </div>
                    </div>
                    
                    <!-- Drug Interactions Alert -->
                    <div class="alert alert-warning d-flex align-items-center" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <div>
                            <strong>Drug Interaction Check:</strong>
                            Always verify potential interactions before prescribing. 
                            <button type="button" class="btn btn-sm btn-outline-warning ms-2" onclick="checkInteractions()">
                                Check Now
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Usage Statistics Card -->
            <div class="card mb-4 card-fade-in">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-bar me-2 text-info"></i>Usage Statistics
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="text-center">
                                <div class="stat-icon bg-primary bg-opacity-10 text-primary rounded-circle p-3 mx-auto mb-2">
                                    <i class="fas fa-prescription-bottle-alt"></i>
                                </div>
                                <h4 class="mb-0 fw-bold">0</h4>
                                <small class="text-muted">Times Prescribed</small>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="text-center">
                                <div class="stat-icon bg-success bg-opacity-10 text-success rounded-circle p-3 mx-auto mb-2">
                                    <i class="fas fa-users"></i>
                                </div>
                                <h4 class="mb-0 fw-bold">0</h4>
                                <small class="text-muted">Unique Patients</small>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="text-center">
                                <div class="stat-icon bg-warning bg-opacity-10 text-warning rounded-circle p-3 mx-auto mb-2">
                                    <i class="fas fa-calendar-alt"></i>
                                </div>
                                <h4 class="mb-0 fw-bold">-</h4>
                                <small class="text-muted">Last Prescribed</small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-3">
                        <small class="text-muted">
                            <i class="fas fa-info-circle me-1"></i>
                            Statistics based on prescription records in this system
                        </small>
                    </div>
                </div>
            </div>

            <!-- Recent Prescriptions Card -->
            <div class="card card-fade-in">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-history me-2 text-secondary"></i>Recent Prescriptions
                    </h5>
                    <button class="btn btn-sm btn-outline-secondary" onclick="viewAllPrescriptions()">
                        View All
                    </button>
                </div>
                <div class="card-body">
                    <div class="empty-state">
                        <div class="empty-state-icon">
                            <i class="fas fa-prescription-bottle-alt"></i>
                        </div>
                        <h4>No Recent Prescriptions</h4>
                        <p>This medication hasn't been prescribed recently.</p>
                        <button class="btn btn-primary" onclick="createNewPrescription()">
                            <i class="fas fa-plus me-2"></i>Create New Prescription
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar Information -->
        <div class="col-lg-4">
            <!-- Quick Reference Card -->
            <div class="card mb-4 card-fade-in">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-bookmark me-2 text-primary"></i>Quick Reference
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label text-muted">NDC Number</label>
                        <p class="mb-0 font-monospace">
                            <span class="text-muted">Not available</span>
                        </p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-muted">Generic Available</label>
                        <div>
                            <span class="badge bg-secondary">
                                <i class="fas fa-question-circle me-1"></i>Unknown
                            </span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-muted">Controlled Substance</label>
                        <div>
                            <span class="badge bg-success">
                                <i class="fas fa-check-circle me-1"></i>Non-controlled
                            </span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-muted">Pregnancy Category</label>
                        <div>
                            <span class="badge bg-warning text-dark">
                                <i class="fas fa-exclamation-triangle me-1"></i>Consult References
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Safety Information Card -->
            <div class="card mb-4 card-fade-in">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-shield-alt me-2 text-warning"></i>Safety Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info border-0" role="alert">
                        <h6 class="alert-heading">
                            <i class="fas fa-info-circle me-2"></i>Important Notes
                        </h6>
                        <ul class="mb-0 ps-3">
                            <li>Always verify dosing before dispensing</li>
                            <li>Check for allergies and contraindications</li>
                            <li>Review drug interactions</li>
                            <li>Confirm patient understanding of instructions</li>
                        </ul>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-outline-warning" onclick="checkAllergies()">
                            <i class="fas fa-allergies me-2"></i>Check Allergies
                        </button>
                        <button type="button" class="btn btn-outline-danger" onclick="reportAdverseEvent()">
                            <i class="fas fa-exclamation-circle me-2"></i>Report Adverse Event
                        </button>
                    </div>
                </div>
            </div>

            <!-- Quick Actions Card -->
            <div class="card mb-4 card-fade-in">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-bolt me-2 text-success"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-outline-primary" onclick="createNewPrescription()">
                            <i class="fas fa-plus me-2"></i>New Prescription
                        </button>
                        <button type="button" class="btn btn-outline-info" onclick="viewDrugMonograph()">
                            <i class="fas fa-book me-2"></i>Drug Monograph
                        </button>
                        <button type="button" class="btn btn-outline-secondary" onclick="checkInventory()">
                            <i class="fas fa-boxes me-2"></i>Check Inventory
                        </button>
                        <button type="button" class="btn btn-outline-success" onclick="addToFavorites()">
                            <i class="fas fa-star me-2"></i>Add to Favorites
                        </button>
                    </div>
                </div>
            </div>

            <!-- Record Information Card -->
            <div class="card card-fade-in">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-clock me-2 text-secondary"></i>Record Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        <small class="text-muted">Added to System</small>
                        <p class="mb-0 small">@Model.Medication.CreatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")</p>
                    </div>
                    <div>
                        <small class="text-muted">Last Updated</small>
                        <p class="mb-0 small">@Model.Medication.UpdatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Loading Overlay -->
<div id="loadingOverlay" class="loading-overlay" style="display: none;">
    <div class="loading-spinner">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2 text-muted">Processing...</p>
    </div>
</div>

@section Scripts {
    <script>
        // Print functionality
        function printMedicationDetails() {
            window.print();
        }

        // Export functionality
        function exportMedicationData() {
            showLoading();
            setTimeout(() => {
                hideLoading();
                showToast('Medication data exported successfully!', 'success');
            }, 1500);
        }

        // Safety check functions
        function checkInteractions() {
            showLoading();
            setTimeout(() => {
                hideLoading();
                showToast('No known interactions found with common medications.', 'success');
            }, 2000);
        }

        function checkAllergies() {
            showToast('Allergy checking feature coming soon!', 'info');
        }

        function reportAdverseEvent() {
            showToast('Adverse event reporting feature coming soon!', 'info');
        }

        // Quick action functions
        function createNewPrescription() {
            showToast('Redirecting to prescription creation...', 'info');
            setTimeout(() => {
                window.location.href = '/Prescriptions/Create';
            }, 1000);
        }

        function viewDrugMonograph() {
            showToast('Drug monograph feature coming soon!', 'info');
        }

        function checkInventory() {
            showToast('Inventory checking feature coming soon!', 'info');
        }

        function addToFavorites() {
            showToast('Added to favorites!', 'success');
        }

        function viewPrescriptionHistory() {
            showToast('Prescription history feature coming soon!', 'info');
        }

        function viewAllPrescriptions() {
            showToast('Redirecting to prescriptions...', 'info');
            setTimeout(() => {
                window.location.href = '/Prescriptions';
            }, 1000);
        }

        // Loading states
        function showLoading() {
            document.getElementById('loadingOverlay').style.display = 'flex';
        }

        function hideLoading() {
            document.getElementById('loadingOverlay').style.display = 'none';
        }

        // Toast notifications (reuse from patient details)
        function showToast(message, type = 'info') {
            const toastContainer = document.getElementById('toastContainer') || createToastContainer();
            const toast = createToast(message, type);
            toastContainer.appendChild(toast);
            
            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();
            
            toast.addEventListener('hidden.bs.toast', () => {
                toast.remove();
            });
        }

        function createToastContainer() {
            const container = document.createElement('div');
            container.id = 'toastContainer';
            container.className = 'toast-container position-fixed top-0 end-0 p-3';
            container.style.zIndex = '1050';
            document.body.appendChild(container);
            return container;
        }

        function createToast(message, type) {
            const toast = document.createElement('div');
            toast.className = 'toast';
            toast.setAttribute('role', 'alert');
            toast.setAttribute('aria-live', 'assertive');
            toast.setAttribute('aria-atomic', 'true');
            
            const iconMap = {
                success: 'fas fa-check-circle text-success',
                error: 'fas fa-exclamation-circle text-danger',
                warning: 'fas fa-exclamation-triangle text-warning',
                info: 'fas fa-info-circle text-info'
            };
            
            toast.innerHTML = `
                <div class="toast-header">
                    <i class="${iconMap[type] || iconMap.info} me-2"></i>
                    <strong class="me-auto">Notification</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    ${message}
                </div>
            `;
            
            return toast;
        }

        // Keyboard navigation
        document.addEventListener('keydown', function(e) {
            if (e.ctrlKey || e.metaKey) {
                switch(e.key) {
                    case 'e':
                        e.preventDefault();
                        document.querySelector('[asp-page="./Edit"]').click();
                        break;
                    case 'p':
                        e.preventDefault();
                        printMedicationDetails();
                        break;
                    case 'n':
                        e.preventDefault();
                        createNewPrescription();
                        break;
                }
            }
        });

        // Focus management for accessibility
        document.addEventListener('DOMContentLoaded', function() {
            // Set initial focus to main heading
            document.querySelector('h1').focus();
            
            // Add card animation delays
            const cards = document.querySelectorAll('.card-fade-in');
            cards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.1}s`;
            });
        });
    </script>
}
