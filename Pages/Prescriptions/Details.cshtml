@page "{id:int}"
@model Rosheta.Pages.Prescriptions.DetailsModel
@using Rosheta.Models

@{
    ViewData["Title"] = "Prescription Details";
}

<div class="container-fluid">
    @if (Model.Prescription == null)
    {
        <div class="error-state">
            <div class="error-state-icon">
                <i class="fas fa-exclamation-circle"></i>
            </div>
            <h3>Prescription Not Found</h3>
            <p>The requested prescription could not be found in the system.</p>
            <a asp-page="./Index" class="btn btn-primary">
                <i class="fas fa-arrow-left me-2"></i>Back to Prescriptions
            </a>
        </div>
    }
    else
    {
        <!-- Header Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h1 class="h3 mb-1">Prescription #@Model.Prescription.Id</h1>
                        <p class="text-muted mb-0">
                            Issued: @Model.Prescription.DateIssued.ToString("MMM dd, yyyy") • 
                            Status: <span class="badge @(Model.Prescription.Status == PrescriptionStatus.Active ? "bg-success" : Model.Prescription.Status == PrescriptionStatus.Cancelled ? "bg-danger" : "bg-secondary")">
                                @Model.Prescription.Status
                            </span>
                        </p>
                    </div>
                    <div class="btn-toolbar" role="toolbar" aria-label="Prescription actions">
                        <div class="btn-group me-2" role="group">
                            <button type="button" class="btn btn-primary" onclick="printPrescription()">
                                <i class="fas fa-print me-1" aria-hidden="true"></i>Print
                            </button>
                            <button type="button" class="btn btn-outline-primary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="visually-hidden">Toggle Dropdown</span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#" onclick="exportPrescription()">
                                    <i class="fas fa-download me-2"></i>Export PDF
                                </a></li>
                                <li><a class="dropdown-item" href="#" onclick="emailPrescription()">
                                    <i class="fas fa-envelope me-2"></i>Email to Patient
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#" onclick="faxPrescription()">
                                    <i class="fas fa-fax me-2"></i>Fax to Pharmacy
                                </a></li>
                            </ul>
                        </div>
                        <div class="btn-group me-2" role="group">
                            <a asp-page="./Create" asp-route-copyFromId="@Model.Prescription.Id" class="btn btn-success">
                                <i class="fas fa-copy me-1" aria-hidden="true"></i>Copy Prescription
                            </a>
                            @if (Model.Prescription.Status == PrescriptionStatus.Active)
                            {
                                <button type="button" class="btn btn-outline-danger" onclick="cancelPrescription()">
                                    <i class="fas fa-ban me-1" aria-hidden="true"></i>Cancel
                                </button>
                            }
                        </div>
                        <a asp-page="./Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1" aria-hidden="true"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Main Prescription Content -->
            <div class="col-lg-8">
                <!-- Prescription Header Card -->
                <div class="card mb-4 card-fade-in prescription-card">
                    <div class="card-header bg-primary text-white">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-prescription-bottle-alt me-2"></i>
                                    Prescription Details
                                </h5>
                            </div>
                            <div class="col-md-4 text-end">
                                <span class="badge bg-light text-dark">
                                    @Model.Prescription.Status
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <!-- Patient and Doctor Information -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="prescription-info-block">
                                    <h6 class="text-primary mb-2">
                                        <i class="fas fa-user me-2"></i>Patient Information
                                    </h6>
                                    <p class="fw-bold fs-5 mb-1">@Model.Prescription.Patient.Name</p>
                                    <p class="text-muted mb-0">
                                        <small>
                                            <i class="fas fa-calendar me-1"></i>
                                            DOB: @Model.Prescription.Patient.DateOfBirth.ToString("MM/dd/yyyy")
                                        </small>
                                    </p>
                                    <p class="text-muted mb-0">
                                        <small>
                                            <i class="fas fa-phone me-1"></i>
                                            @Model.Prescription.Patient.ContactInfo
                                        </small>
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="prescription-info-block">
                                    <h6 class="text-success mb-2">
                                        <i class="fas fa-user-md me-2"></i>Prescribing Doctor
                                    </h6>
                                    <p class="fw-bold fs-5 mb-1">Dr. @Model.Prescription.Doctor.Name</p>
                                    <p class="text-muted mb-0">
                                        <small>
                                            <i class="fas fa-id-card me-1"></i>
                                            License: @Model.Prescription.Doctor.LicenseNumber
                                        </small>
                                    </p>
                                    <p class="text-muted mb-0">
                                        <small>
                                            <i class="fas fa-hospital me-1"></i>
                                            @Model.Prescription.Doctor.Specialization
                                        </small>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Prescription Dates -->
                        <div class="row mb-4">
                            <div class="col-md-4">
                                <label class="form-label text-muted">Date Issued</label>
                                <p class="fw-semibold mb-0">
                                    <i class="fas fa-calendar-plus me-2 text-primary"></i>
                                    @Model.Prescription.DateIssued.ToString("MMMM dd, yyyy")
                                </p>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label text-muted">Expiry Date</label>
                                <p class="fw-semibold mb-0">
                                    @if (Model.Prescription.ExpiryDate.HasValue)
                                    {
                                        var isExpired = Model.Prescription.ExpiryDate.Value < DateTime.Now;
                                        <i class="fas fa-calendar-times me-2 @(isExpired ? "text-danger" : "text-warning")"></i>
                                        <span class="@(isExpired ? "text-danger" : "")">
                                            @Model.Prescription.ExpiryDate.Value.ToString("MMMM dd, yyyy")
                                        </span>
                                        @if (isExpired)
                                        {
                                            <span class="badge bg-danger ms-2">Expired</span>
                                        }
                                    }
                                    else
                                    {
                                        <i class="fas fa-calendar-times me-2 text-muted"></i>
                                        <span class="text-muted">Not specified</span>
                                    }
                                </p>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label text-muted">Next Appointment</label>
                                <p class="fw-semibold mb-0">
                                    @if (Model.Prescription.NextAppointmentDate.HasValue)
                                    {
                                        <i class="fas fa-calendar-check me-2 text-info"></i>
                                        @Model.Prescription.NextAppointmentDate.Value.ToString("MMMM dd, yyyy")
                                    }
                                    else
                                    {
                                        <i class="fas fa-calendar-check me-2 text-muted"></i>
                                        <span class="text-muted">Not scheduled</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Medication Items Card -->
                <div class="card card-fade-in">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-pills me-2 text-info"></i>Prescribed Medications
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Prescription.PrescriptionItems == null || !Model.Prescription.PrescriptionItems.Any())
                        {
                            <div class="empty-state">
                                <div class="empty-state-icon">
                                    <i class="fas fa-pills"></i>
                                </div>
                                <h4>No Medications</h4>
                                <p>No medication items found for this prescription.</p>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-hover medication-table">
                                    <thead class="table-light">
                                        <tr>
                                            <th scope="col">
                                                <i class="fas fa-pills me-1"></i>Medication
                                            </th>
                                            <th scope="col">
                                                <i class="fas fa-weight me-1"></i>Dosage
                                            </th>
                                            <th scope="col">
                                                <i class="fas fa-clock me-1"></i>Frequency
                                            </th>
                                            <th scope="col">
                                                <i class="fas fa-calendar-alt me-1"></i>Duration
                                            </th>
                                            <th scope="col">
                                                <i class="fas fa-sort-numeric-up me-1"></i>Quantity
                                            </th>
                                            <th scope="col">
                                                <i class="fas fa-redo me-1"></i>Refills
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Prescription.PrescriptionItems)
                                        {
                                            <tr class="medication-row">
                                                <td>
                                                    <div class="medication-info">
                                                        <div class="fw-bold text-primary">@item.Medication.Name</div>
                                                        <small class="text-muted">@item.Medication.Form • @item.Medication.Manufacturer</small>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="badge bg-info">@item.Dosage</span>
                                                </td>
                                                <td>
                                                    <span class="badge bg-secondary">@item.Frequency</span>
                                                </td>
                                                <td>
                                                    <span class="badge bg-success">@item.Duration</span>
                                                </td>
                                                <td>
                                                    <span class="fw-semibold">@item.Quantity</span>
                                                </td>
                                                <td>
                                                    <span class="badge @(item.Refills > 0 ? "bg-warning text-dark" : "bg-light text-dark")">
                                                        @item.Refills
                                                    </span>
                                                </td>
                                            </tr>
                                            @if (!string.IsNullOrEmpty(item.Instructions) || !string.IsNullOrEmpty(item.Notes))
                                            {
                                                <tr class="medication-details">
                                                    <td colspan="6" class="bg-light">
                                                        @if (!string.IsNullOrEmpty(item.Instructions))
                                                        {
                                                            <div class="mb-2">
                                                                <strong class="text-primary">
                                                                    <i class="fas fa-instructions me-1"></i>Instructions:
                                                                </strong>
                                                                <span>@item.Instructions</span>
                                                            </div>
                                                        }
                                                        @if (!string.IsNullOrEmpty(item.Notes))
                                                        {
                                                            <div class="mb-0">
                                                                <strong class="text-secondary">
                                                                    <i class="fas fa-sticky-note me-1"></i>Notes:
                                                                </strong>
                                                                <span>@item.Notes</span>
                                                            </div>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Sidebar Information -->
            <div class="col-lg-4">
                <!-- Status and Actions Card -->
                <div class="card mb-4 card-fade-in">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-tasks me-2 text-primary"></i>Status & Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label text-muted">Current Status</label>
                            <div>
                                <span class="badge @(Model.Prescription.Status == PrescriptionStatus.Active ? "bg-success" : Model.Prescription.Status == PrescriptionStatus.Cancelled ? "bg-danger" : "bg-secondary") fs-6">
                                    <i class="fas @(Model.Prescription.Status == PrescriptionStatus.Active ? "fa-check-circle" : Model.Prescription.Status == PrescriptionStatus.Cancelled ? "fa-ban" : "fa-clock") me-1"></i>
                                    @Model.Prescription.Status
                                </span>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            @if (Model.Prescription.Status == PrescriptionStatus.Active)
                            {
                                <button type="button" class="btn btn-outline-warning" onclick="renewPrescription()">
                                    <i class="fas fa-sync-alt me-2"></i>Renew Prescription
                                </button>
                                <button type="button" class="btn btn-outline-info" onclick="modifyPrescription()">
                                    <i class="fas fa-edit me-2"></i>Modify Prescription
                                </button>
                                <button type="button" class="btn btn-outline-danger" onclick="cancelPrescription()">
                                    <i class="fas fa-ban me-2"></i>Cancel Prescription
                                </button>
                            }
                            else
                            {
                                <a asp-page="./Create" asp-route-copyFromId="@Model.Prescription.Id" class="btn btn-primary">
                                    <i class="fas fa-copy me-2"></i>Create New from This
                                </a>
                            }
                        </div>
                    </div>
                </div>

                <!-- Prescription Summary Card -->
                <div class="card mb-4 card-fade-in">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-chart-pie me-2 text-success"></i>Summary
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6 text-center mb-3">
                                <div class="stat-icon bg-primary bg-opacity-10 text-primary rounded-circle p-2 mx-auto mb-2">
                                    <i class="fas fa-pills"></i>
                                </div>
                                <h4 class="mb-0 fw-bold">@(Model.Prescription.PrescriptionItems?.Count ?? 0)</h4>
                                <small class="text-muted">Medications</small>
                            </div>
                            <div class="col-6 text-center mb-3">
                                <div class="stat-icon bg-info bg-opacity-10 text-info rounded-circle p-2 mx-auto mb-2">
                                    <i class="fas fa-redo"></i>
                                </div>
                                <h4 class="mb-0 fw-bold">@(Model.Prescription.PrescriptionItems?.Sum(x => x.Refills) ?? 0)</h4>
                                <small class="text-muted">Total Refills</small>
                            </div>
                        </div>
                        
                        <div class="mt-3 pt-3 border-top">
                            <small class="text-muted">
                                <i class="fas fa-clock me-1"></i>
                                Created @((DateTime.Now - Model.Prescription.DateIssued).Days) days ago
                            </small>
                        </div>
                    </div>
                </div>

                <!-- Pharmacy Information Card -->
                <div class="card mb-4 card-fade-in">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-store me-2 text-warning"></i>Pharmacy Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info border-0" role="alert">
                            <h6 class="alert-heading">
                                <i class="fas fa-info-circle me-2"></i>Transmission
                            </h6>
                            <p class="mb-2">This prescription can be sent electronically to the patient's preferred pharmacy.</p>
                            <button type="button" class="btn btn-sm btn-outline-info" onclick="selectPharmacy()">
                                <i class="fas fa-paper-plane me-1"></i>Send to Pharmacy
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Safety Alerts Card -->
                <div class="card card-fade-in">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-shield-alt me-2 text-danger"></i>Safety Alerts
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-warning border-0" role="alert">
                            <h6 class="alert-heading">
                                <i class="fas fa-exclamation-triangle me-2"></i>Reminders
                            </h6>
                            <ul class="mb-0 ps-3">
                                <li>Verify patient allergies before dispensing</li>
                                <li>Check for drug interactions</li>
                                <li>Confirm dosing accuracy</li>
                                <li>Review refill limitations</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Loading Overlay -->
<div id="loadingOverlay" class="loading-overlay" style="display: none;">
    <div class="loading-spinner">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2 text-muted">Processing...</p>
    </div>
</div>

@section Scripts {
    <script>
        // Print functionality
        function printPrescription() {
            window.print();
        }

        // Export functionality
        function exportPrescription() {
            showLoading();
            setTimeout(() => {
                hideLoading();
                showToast('Prescription exported to PDF successfully!', 'success');
            }, 2000);
        }

        // Email functionality
        function emailPrescription() {
            showLoading();
            setTimeout(() => {
                hideLoading();
                showToast('Prescription emailed to patient successfully!', 'success');
            }, 1500);
        }

        // Fax functionality
        function faxPrescription() {
            showToast('Fax functionality coming soon!', 'info');
        }

        // Prescription management functions
        function renewPrescription() {
            if (confirm('Are you sure you want to renew this prescription?')) {
                showLoading();
                setTimeout(() => {
                    hideLoading();
                    showToast('Prescription renewed successfully!', 'success');
                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                }, 2000);
            }
        }

        function modifyPrescription() {
            showToast('Modify prescription feature coming soon!', 'info');
        }

        function cancelPrescription() {
            if (confirm('Are you sure you want to cancel this prescription? This action cannot be undone.')) {
                showLoading();
                setTimeout(() => {
                    hideLoading();
                    showToast('Prescription cancelled successfully!', 'warning');
                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                }, 1500);
            }
        }

        // Pharmacy functions
        function selectPharmacy() {
            showToast('Pharmacy selection feature coming soon!', 'info');
        }

        // Loading states
        function showLoading() {
            document.getElementById('loadingOverlay').style.display = 'flex';
        }

        function hideLoading() {
            document.getElementById('loadingOverlay').style.display = 'none';
        }

        // Toast notifications
        function showToast(message, type = 'info') {
            const toastContainer = document.getElementById('toastContainer') || createToastContainer();
            const toast = createToast(message, type);
            toastContainer.appendChild(toast);
            
            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();
            
            toast.addEventListener('hidden.bs.toast', () => {
                toast.remove();
            });
        }

        function createToastContainer() {
            const container = document.createElement('div');
            container.id = 'toastContainer';
            container.className = 'toast-container position-fixed top-0 end-0 p-3';
            container.style.zIndex = '1050';
            document.body.appendChild(container);
            return container;
        }

        function createToast(message, type) {
            const toast = document.createElement('div');
            toast.className = 'toast';
            toast.setAttribute('role', 'alert');
            toast.setAttribute('aria-live', 'assertive');
            toast.setAttribute('aria-atomic', 'true');
            
            const iconMap = {
                success: 'fas fa-check-circle text-success',
                error: 'fas fa-exclamation-circle text-danger',
                warning: 'fas fa-exclamation-triangle text-warning',
                info: 'fas fa-info-circle text-info'
            };
            
            toast.innerHTML = `
                <div class="toast-header">
                    <i class="${iconMap[type] || iconMap.info} me-2"></i>
                    <strong class="me-auto">Notification</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    ${message}
                </div>
            `;
            
            return toast;
        }

        // Keyboard navigation
        document.addEventListener('keydown', function(e) {
            if (e.ctrlKey || e.metaKey) {
                switch(e.key) {
                    case 'p':
                        e.preventDefault();
                        printPrescription();
                        break;
                    case 'e':
                        e.preventDefault();
                        exportPrescription();
                        break;
                    case 'c':
                        e.preventDefault();
                        document.querySelector('[asp-route-copyFromId]')?.click();
                        break;
                }
            }
        });

        // Focus management and animations
        document.addEventListener('DOMContentLoaded', function() {
            // Set initial focus to main heading
            document.querySelector('h1').focus();
            
            // Add card animation delays
            const cards = document.querySelectorAll('.card-fade-in');
            cards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.1}s`;
            });
        });
    </script>
}
