@page
@model ErrorModel
@{
    ViewData["Title"] = Model.ErrorTitle;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h1 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        @Model.ErrorTitle
                    </h1>
                </div>
                <div class="card-body">
                    @if (Model.StatusCode != 500)
                    {
                        <h4 class="text-danger">@Model.StatusCode</h4>
                    }
                    
                    <p class="lead">@Model.ErrorMessage</p>
                    
                    @if (Model.ShowRequestId)
                    {
                        <div class="alert alert-secondary mt-3">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                            <br />
                            <small class="text-muted">Please include this ID when reporting the issue.</small>
                        </div>
                    }

                    <div class="mt-4">
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house-fill me-2"></i>Go to Dashboard
                        </a>
                        <button onclick="history.back()" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Go Back
                        </button>
                    </div>
                </div>
            </div>

            @if (Model.StatusCode == 404)
            {
                <div class="mt-4 text-center">
                    <p class="text-muted">Common pages:</p>
                    <div class="btn-group" role="group">
                        <a href="/Patients" class="btn btn-outline-primary btn-sm">Patients</a>
                        <a href="/Prescriptions" class="btn btn-outline-primary btn-sm">Prescriptions</a>
                        <a href="/Medications" class="btn btn-outline-primary btn-sm">Medications</a>
                        <a href="/DoctorProfile/Edit" class="btn btn-outline-primary btn-sm">Profile</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Navigation functions
        function goBack() {
            if (window.history.length > 1) {
                window.history.back();
            } else {
                window.location.href = '/';
            }
        }
        
        function refreshPage() {
            window.location.reload();
        }
        
        // Help functions
        function showHelp() {
            showToast('Help documentation coming soon!', 'info');
        }
        
        function contactSupport() {
            const requestId = '@Model.RequestId';
            const subject = `Error Report - Request ID: ${requestId}`;
            const body = `I encountered an error while using the Rosheta application.%0D%0A%0D%0ARequest ID: ${requestId}%0D%0ATimestamp: @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")%0D%0A%0D%0APlease describe what you were trying to do when the error occurred:`;
            
            const mailtoLink = `mailto:support@rosheta.com?subject=${encodeURIComponent(subject)}&body=${body}`;
            window.location.href = mailtoLink;
        }
        
        function reportBug() {
            showToast('Bug reporting system coming soon!', 'info');
        }
        
        // Toast notification system
        function showToast(message, type = 'info') {
            const toastContainer = document.getElementById('toastContainer') || createToastContainer();
            const toast = createToast(message, type);
            toastContainer.appendChild(toast);
            
            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();
            
            toast.addEventListener('hidden.bs.toast', () => {
                toast.remove();
            });
        }

        function createToastContainer() {
            const container = document.createElement('div');
            container.id = 'toastContainer';
            container.className = 'toast-container position-fixed top-0 end-0 p-3';
            container.style.zIndex = '1050';
            document.body.appendChild(container);
            return container;
        }

        function createToast(message, type) {
            const toast = document.createElement('div');
            toast.className = 'toast';
            toast.setAttribute('role', 'alert');
            toast.setAttribute('aria-live', 'assertive');
            toast.setAttribute('aria-atomic', 'true');
            
            const iconMap = {
                success: 'fas fa-check-circle text-success',
                error: 'fas fa-exclamation-circle text-danger',
                warning: 'fas fa-exclamation-triangle text-warning',
                info: 'fas fa-info-circle text-info'
            };
            
            toast.innerHTML = `
                <div class="toast-header">
                    <i class="${iconMap[type] || iconMap.info} me-2"></i>
                    <strong class="me-auto">Notification</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    ${message}
                </div>
            `;
            
            return toast;
        }
        
        // Keyboard navigation
        document.addEventListener('keydown', function(e) {
            switch(e.key) {
                case 'Escape':
                    goBack();
                    break;
                case 'F5':
                    e.preventDefault();
                    refreshPage();
                    break;
            }
            
            if (e.ctrlKey || e.metaKey) {
                switch(e.key) {
                    case 'h':
                        e.preventDefault();
                        window.location.href = '/';
                        break;
                    case 'r':
                        e.preventDefault();
                        refreshPage();
                        break;
                }
            }
        });
        
        // Focus management for accessibility
        document.addEventListener('DOMContentLoaded', function() {
            // Set focus to the primary action button
            document.querySelector('.btn-primary').focus();
        });
        
        // Auto-refresh functionality (optional)
        function startAutoRefresh() {
            let countdown = 30;
            const button = document.querySelector('.btn-outline-secondary');
            const originalText = button.innerHTML;
            
            const interval = setInterval(() => {
                countdown--;
                button.innerHTML = `<i class="fas fa-sync-alt me-2"></i>Auto-refresh (${countdown}s)`;
                
                if (countdown <= 0) {
                    clearInterval(interval);
                    refreshPage();
                }
            }, 1000);
            
            // Cancel auto-refresh if user interacts with page
            document.addEventListener('click', () => {
                clearInterval(interval);
                button.innerHTML = originalText;
            }, { once: true });
        }
        
        // Uncomment to enable auto-refresh
        // setTimeout(startAutoRefresh, 5000);
    </script>
}
